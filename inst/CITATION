pkgAuthors <- function(pkg) {
    desc <- packageDescription(pkg)
    eval(parse(text = desc$`Authors@R`))
}


pkgVer <- function(pkg) {
    if (!exists("meta") || is.null(meta)) meta <- packageDescription(pkg)
    ver <- meta$Version
    paste0('https://github.com/paulYRP/dnaEPICO/', pkg, ' - R package version ', ver)
}

c(

    bibentry(
        bibtype = "Manual",
        title   = "dnaEPICO: Analysis Pipeline for Illumina EPICv2 DNA Methylation Array Data",
        author  = pkgAuthors("dnaEPICO"),
        year    = format(Sys.Date(), "%Y"),
        url     = "https://bioconductor.org/packages/dnaEPICO",
        note    = pkgVer("dnaEPICO")
    )
)
